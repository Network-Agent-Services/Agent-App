<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:columnCount="4"
        android:rowCount="4"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Airtel Money Bal: "
            android:layout_row="0"
            android:padding="5dp"
            android:textSize="20dp"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/airtel_money_bal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_column="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Money Bal: "
            android:padding="5dp"
            android:textSize="20dp"
            android:layout_row="1"
            android:layout_column="0"/>
        <TextView
            android:id="@+id/mobile_money_bal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_row="1"
            android:layout_column="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Airtel Airtime Bal: "
            android:padding="5dp"
            android:textSize="20dp"
            android:layout_row="2"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/airtel_airtime_bal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_row="2"
            android:layout_column="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MTN Airtime Bal: "
            android:padding="5dp"
            android:textSize="20dp"
            android:layout_row="3"
            android:layout_column="0"/>
        <TextView
            android:id="@+id/mtn_airtime_bal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_row="3"
            android:layout_column="1"/>

    </GridLayout>



    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/table_main">

            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>

</LinearLayout>
