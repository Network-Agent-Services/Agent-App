<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_ott_airtel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/ott_phone_airtel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="5sp"
        android:layout_marginRight="50sp"
        android:background="#233603C5"
        android:hint="Phone No."
        android:inputType="phone"
        android:letterSpacing="0.2"
        android:maxLength="10"
        android:padding="15sp"
        android:textColorHint="#00838F"
        android:textSize="25sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="30sp"
        android:layout_marginRight="50sp"
        android:text="Select OTT service Tax"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="7sp"
        android:layout_marginRight="50sp"
        android:layout_marginBottom="20sp"
        android:background="#233603C5"
        android:dropDownWidth="fill_parent"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:overScrollMode="ifContentScrolls"
        android:padding="25sp"
        android:letterSpacing="0.2"
        android:popupBackground="@color/cardview_light_background"
        android:spinnerMode="dropdown"
        android:textColorHint="#000"
        android:textStyle="bold" />





    <Button
        android:id="@+id/ott_btn_airtel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4DB6AC"
        android:text="GO"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/home_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60sp"
        android:background="#C8F57A07"
        android:padding="20sp"
        android:text="BACK TO MENU"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />


</LinearLayout>