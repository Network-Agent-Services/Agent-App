<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_easyload_mtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/easyload_phone_mtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="5sp"
        android:layout_marginRight="50sp"
        android:background="#233603C5"
        android:hint="Phone No."
        android:inputType="phone"
        android:letterSpacing="0.2"
        android:maxLength="10"
        android:padding="15sp"
        android:textColorHint="#00838F"
        android:textSize="25sp"
        android:textStyle="bold" />


    <me.abhinay.input.CurrencyEditText
        android:id="@+id/easyload_amount_mtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50sp"
        android:layout_marginBottom="20sp"
        android:background="#233603C5"
        android:hint="Amount"
        android:inputType="number"
        android:letterSpacing="0.2"
        android:textColorHint="#00838F"
        android:padding="25sp"
        android:textSize="30sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/easyload_btn_mtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4DB6AC"
        android:text="GO"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/home_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60sp"
        android:background="#C8F57A07"
        android:padding="20sp"
        android:text="BACK TO MENU"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />



</LinearLayout>